<!DOCTYPE html>
<html>
  <head>
    <title>CadeBuffet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
  <h1><%= link_to 'Cadê Buffet', root_path%></h1>
  <% if buffets_owner_signed_in? %>
    <div>
      <%= button_to 'Sair', destroy_buffets_owner_session_path, method: :delete %>
    </div>
  <% else %>
    <div>
      <%= link_to 'Sou Proprietário', new_buffets_owner_session_path %>
      
    </div>
  <% end %>
    <div>
      <%= notice %>
    </div>
    <div>
      <%= alert %>
    </div>
    <%= yield %>
  </body>
</html>
