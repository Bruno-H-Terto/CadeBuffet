<p>Meu Buffet</p>
<ul>
  <li><%= @buffet.full_register %></li>
  <li><%= @buffet.full_address %></li>
  <li><%= @buffet.full_contact %></li>
</ul>

<section>
  <% if @events.any? %>
  <table>
  <thead>
    <tr>
      <th>Evento</th>
      <th>Descrição</th>
    </tr>
  </thead>
    <tbody>
      <% @events.each do |ev| %>
        <tr>
          <td><%= link_to "#{ev.name}", event_path(ev) %></td>
          <td><%= ev.description %></td>
        </tr>
      <% end %>
    <tbody/>
  </table>
  <% else %>
    <p>Não existem eventos Cadastrados</p>
  <% end %>
</section>

<%= link_to 'Cadastrar novo evento', new_event_path %>
