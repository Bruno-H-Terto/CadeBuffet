<div><%= PriceOrder.human_attribute_name :initial_price %> <%= number_to_currency @price_order.initial_price %></div>
<div><%= PriceOrder.human_attribute_name :final_price %> <%= number_to_currency @price_order.final_price %></div>
<div><%= PriceOrder.human_attribute_name :deadline %> <%= I18n.l @price_order.deadline %></div>
<div><%= PriceOrder.human_attribute_name :rate %> de <%= number_to_currency @price_order.rate %> | <%= @price_order.description_rate %> </div>
<div><%= PriceOrder.human_attribute_name :payment_methods %>: <%= @price_order.payment_methods %> </div>
<% case @order.status %>
<% when 'waiting_review' %>
  <div>Confirme o seu pedido</div>
  <div>
    <%= button_to 'Confirmar', confirm_order_path(@order, 1), method: :post %>
    <%= button_to 'Cancelar', confirm_order_path(@order, 3), method: :post %>
  </div>
<% when 'canceled' %>
  <p>Pedido cancelado</p>
<% else %>
  
<% end %>
