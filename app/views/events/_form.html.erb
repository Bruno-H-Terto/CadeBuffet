

<section>
  <%= form_with model: @event, url:events_path  do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :min_quantity_people %>
      <%= form.number_field :min_quantity_people%>
    </div>
  
    <div>
      <%= form.label :max_quantity_people %>
      <%= form.number_field :max_quantity_people %>
    </div>
  
    <div>
      <%= form.label :duration_in_minutes %>
      <%= form.text_field :duration_in_minutes %>
    </div>
  
    <div>
      <%= form.label :alcoholic_drink %>
      <%= form.check_box :alcoholic_drink %>
    </div>
  
    <div>
      <%= form.label :self_decoration %>
      <%= form.check_box :self_decoration %>
    </div>
  
    <div>
      <%= form.label :parking %>
      <%= form.check_box :parking%>
    </div>
  
    <div>
      <%= form.label :valet %>
      <%= form.check_box :valet %>
    </div>
  
    <div>
      <%= form.label :fixed_location %>
      <%= form.check_box :fixed_location %>
    </div>
  
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
  
    <div>
      <%= form.label :menu %>
      <%= form.text_area :menu, value: @event[:menu] %>
    </div>

    <h3>Valores</h3>
      <%= form.fields_for :price_event do |price| %>
        <div>
          <%= price.label :min_price_working_day %>
          <%= price.number_field :min_price_working_day %>
        </div>
      
        <div>
          <%= price.label :additional_price_for_person_working_day %>
          <%= price.number_field :additional_price_for_person_working_day %>
        </div>
      
        <div>
          <%= price.label :extra_hour_working_day %>
          <%= price.number_field :extra_hour_working_day %>
        </div>
      
        <div>
          <%= price.label :min_price_weekend %>
          <%= price.number_field :min_price_weekend %>
        </div>
      
        <div>
          <%= price.label :additional_price_for_person_weekend %>
          <%= price.number_field :additional_price_for_person_weekend %>
        </div>
      
        <div>
          <%= price.label :extra_hour_weekend %>
          <%= price.number_field :extra_hour_weekend %>
        </div>
    
      <% end %>
      
    <div>
      <%= form.submit 'Registrar' %>
    </div>
  <% end %>
</section>