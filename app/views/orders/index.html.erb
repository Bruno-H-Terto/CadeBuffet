<p><%= link_to 'Home', root_path %> > Meus pedidos</p>

<% if @orders_waiting_confirmation.any? %>
  <div>Pedidos liberados pelo Buffet</p>
  <% @orders_waiting_confirmation.each do |order| %>
    <dl>
      <dt><%= Order.human_attribute_name(:code) %>: <%=link_to order.code, order_path(order) %></dt>
      <dd><%= Order.human_attribute_name(:status) %>: <%= Order.human_attribute_name(order.status) %></dd>
    </dl>
  <% end %>
<% end %>


<% if @other_orders.any? %>
  <% @other_orders.each do |order| %>
    <dl>
      <dt><%= Order.human_attribute_name(:code) %>: <%= order.code %></dt>
      <dd><%= Order.human_attribute_name(:status) %>: <%= Order.human_attribute_name(order.status) %></dd>
    </dl>
  <% end %>
<% else %>
    <p>NÃ£o existem pedidos cadastrados</p>

<% end %>